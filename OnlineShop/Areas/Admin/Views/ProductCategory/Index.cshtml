@model PagedList.IPagedList<Model.EF.ProductCategory>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header
{
    Danh sách nhóm sản phẩm
}

<div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách nhóm sản phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "ProductCategory", FormMethod.Get))
                {
                    <div class="row" class="form-group">
                        <div class="col-lg-12">
                            <div class="col-md-1">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="SearchString" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class=" btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/ProductCategory/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>MetaTitle</th>
                            <th>Display Order</th>
                            <th>Ngày tạo</th>
                            <th>Người tạo</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.DisplayOrder</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.CreatedBy</td>
                                    <td>
                                        <a href="/Admin/ProductCategory/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new {@id = @item.ID}, new AjaxOptions
                                        {
                                            Confirm = "Bạn có muốn xóa bản ghi này không ?",
                                            OnComplete = "$('#row_" + item.ID + "').remove()",
                                            HttpMethod = "Delete"
                                        }
                                            )
                                    </td>
                                </tr>

                            }
                        }


                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
</div>
</div>